source 'https://rubygems.org'


gem "rails", "4.2.5"
# For Active Record
gem 'mysql2', '>= 0.3.13', '< 0.5'
# For javascript
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'
# For .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'
# For faster development
gem 'turbolinks'
# For API
gem 'jbuilder', '~> 2.0'
gem 'sdoc', '~> 0.4.0', group: :doc
# For debug implemention
group :development, :test do
  gem 'byebug'
end
# For the use of console for rails plugin
group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
end
# For design
gem 'sass-rails', '>= 3.2'
gem 'haml-rails'
gem 'bootstrap-sass', '~> 3.3.6'
group :development do
  gem 'erb2haml'
end
# For devise
gem 'devise'
