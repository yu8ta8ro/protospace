- if user_signed_in?
  - if prototype.like_user(current_user)
    = button_to prototype_like_path(prototype_id: @prototype.id, id: @like.id), method: :delete, class: "btn btn-default", remote: true do
      = image_tag("icon_heart-red.svg")
      %span
        = prototype.likes_count
  - else
    = button_to prototype_likes_path(prototype), class: "btn btn-default", remote: true do
      = image_tag("icon_heart.svg")
      %span
        = prototype.likes_count
- else
  = image_tag("icon_heart.svg")
  %span.num
    = prototype.likes_count
