%form.container.user-new{action: ""}
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :get }) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, autofocus: true, :placeholder => "Username"
            .user-image.col-md-2
              %img{:id => "user_avatar", :class => "media-object" }
              %button.btn.btn-primary Add image
              = f.label :avatar
              %br/
              = f.text_field :avatar, autofocus: true

          = f.text_field :email, autofocus: true, :placeholder => "E-Mail"
          = f.password_field :password, autofocus: true, :placeholder => "Password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, autofocus: true, :placeholder => "member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Profile"}
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Works"}
    .row.text-center.user-btn
      %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Save
