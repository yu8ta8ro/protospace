= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .container.user-new
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: "Username"
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              = f.file_field :avatar
          = f.email_field :email, placeholder: "E-Mail"
          = f.password_field :password, placeholder: "Password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_field :profile, placeholder: "Profile", cols: "30", rows: "4"
          %h4 Work
          .user-name_image.row
            .user-name.col-md-12
              = f.text_field :work, placeholder: "Work"
          .row.text-center.user-btn
            = f.submit :save, data: { disable_with: "sending..." }, class: "button btn btn-lg btn-primary btn-block"
  = render "devise/shared/links"
